@{
    ViewData["Title"] = "Create";
}
@model Service
<form asp-action="create" asp-controller="service" method="post">
    <div class="form-group">
        <label asp-for="Icon">Icon</label>
        <input type="text" class="form-control" asp-for="Icon" placeholder="Icon ">
    </div>
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Title">
    </div>
    <div class="form-group">
        <label asp-for="Desc">Description</label>
        <input type="text" class="form-control" asp-for="Desc" placeholder="Description">
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
